.ios-segmented-control {
    background: #f0f2f5;
    border-radius: 16px;
    display: flex;
    padding: 4px;
    position: relative;
    margin-top: 8px;
}

.segment {
    flex: 1;
    text-align: center;
    font-size: 15px;
    font-weight: 600;
    color: #666;
    padding: 12px 0;
    position: relative;
    z-index: 1;
    transition: all 0.3s ease;
}

.segment.active {
    color: #fff;
}

.segment.active::before {
    content: '';
    position: absolute;
    left: 4px;
    right: 4px;
    background: linear-gradient(45deg, #4776E6, #8E54E9);
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(71,118,230,0.3);
}

.input-group {
