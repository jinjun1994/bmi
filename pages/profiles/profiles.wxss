.container {
    background-color: var(--light-bg-color);
    min-height: 100vh;
    padding: 20px
}

.header {
    margin-bottom: 30px;
    text-align: center
}

.title {
    -webkit-text-fill-color: transparent;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    font-size: 28px;
    font-weight: 700
}

.profiles-list {
    margin-bottom: 40px
}

.profile-item {
    -webkit-align-items: center;
    align-items: center;
    -webkit-animation: modernSlideUp .5s cubic-bezier(.19,1,.22,1) forwards;
    animation: modernSlideUp .5s cubic-bezier(.19,1,.22,1) forwards;
    -webkit-animation-delay: calc(.1s * var(--index, 0));
    animation-delay: calc(.1s * var(--index, 0));
    background-color: var(--card-bg-color);
    border: 1px solid hsla(0,0%,90%,.7);
    border-radius: var(--border-radius);
    box-shadow: var(--card-shadow);
    display: -webkit-flex;
    display: flex;
    margin-bottom: 20px;
    opacity: 0;
    overflow: hidden;
    padding: 22px;
    position: relative;
    transition: all .3s cubic-bezier(.25,.8,.25,1)
}

.profile-item:active {
    box-shadow: 0 1px 3px rgba(0,0,0,.1);
    -webkit-transform: translateY(2px);
    transform: translateY(2px)
}

.profile-item.active {
    background-color: rgba(7,193,96,.05);
    border-left: 4px solid var(--primary-color)
}

.profile-avatar {
    -webkit-align-items: center;
    align-items: center;
    background: var(--primary-gradient);
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(71,118,230,.3);
    display: -webkit-flex;
    display: flex;
    height: 60px;
    -webkit-justify-content: center;
    justify-content: center;
    margin-right: 20px;
    width: 60px
}

.avatar-text {
    color: #fff;
    font-size: 26px;
    font-weight: 700
}

.profile-info {
    -webkit-flex: 1;
    flex: 1
}

.profile-name {
    color: var(--text-color);
    display: block;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 5px
}

.profile-desc {
    color: var(--text-secondary);
    font-size: 14px
}

.profile-actions {
    display: -webkit-flex;
    display: flex;
    margin-left: 15px
}

.edit-btn {
    border: 1px solid #4776e6;
    border-radius: 15px;
    color: #4776e6;
    font-size: 14px;
    margin-right: 8px;
    padding: 6px 12px;
    transition: all .3s ease
}

.edit-btn:active {
    background-color: rgba(71,118,230,.1)
}

.history-btn {
    border: 1px solid #4096ff;
    border-radius: 15px;
    color: #4096ff;
    font-size: 14px;
    padding: 6px 12px;
    transition: all .3s ease
}

.history-btn:active {
    background-color: rgba(64,150,255,.1)
}

.add-profile-btn {
    -webkit-align-items: center;
    align-items: center;
    background: var(--primary-gradient);
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(71,118,230,.3);
    color: #fff;
    display: -webkit-flex;
    display: flex;
    font-weight: 600;
    height: 52px;
    -webkit-justify-content: center;
    justify-content: center;
    margin-top: 20px;
    transition: all .3s cubic-bezier(.25,.8,.25,1)
}

.add-profile-btn:active {
    box-shadow: 0 2px 8px rgba(71,118,230,.2);
    opacity: .9;
    -webkit-transform: translateY(2px);
    transform: translateY(2px)
}

.profile-item:active {
    background-color: rgba(0,0,0,.05);
    transition: background-color .2s
}
