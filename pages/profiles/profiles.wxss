.container {
    background-color: var(--light-bg-color);
    min-height: 100vh;
    padding: 20px
}

.header {
    margin-bottom: 30px;
    text-align: center
}

.title {
    -webkit-text-fill-color: transparent;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    font-size: 28px;
    font-weight: 700
}

.profiles-list {
    margin-bottom: 40px
}

.profile-item {
    -webkit-align-items: center;
    align-items: center;
    -webkit-animation: modernSlideUp .5s cubic-bezier(.19,1,.22,1) forwards;
    animation: modernSlideUp .5s cubic-bezier(.19,1,.22,1) forwards;
    -webkit-animation-delay: calc(.1s * var(--index, 0));
    animation-delay: calc(.1s * var(--index, 0));
    background: linear-gradient(135deg,hsla(0,0%,100%,.9),rgba(240,240,250,.95));
    border: 1px solid rgba(76,175,80,.2);
    border-radius: 12px;
    box-shadow: 0 2px 10px rgba(76,175,80,.1);
    display: -webkit-flex;
    display: flex;
    margin-bottom: 15px;
    opacity: 0;
    overflow: hidden;
    padding: 15px;
    position: relative;
    transition: all .3s cubic-bezier(.25,.8,.25,1)
}

.profile-item:active {
    box-shadow: 0 1px 3px rgba(0,0,0,.1);
    -webkit-transform: translateY(2px);
    transform: translateY(2px)
}

.profile-item.active {
    border: 2px solid var(--primary-color);
    background: linear-gradient(135deg, rgba(76,175,80,0.1), rgba(76,175,80,0.05));
    box-shadow: 0 4px 15px rgba(76,175,80,0.2);
}

.profile-avatar {
    -webkit-align-items: center;
    align-items: center;
    background: var(--primary-gradient);
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(71,118,230,.3);
    display: -webkit-flex;
    display: flex;
    height: 60px;
    -webkit-justify-content: center;
    justify-content: center;
    margin-right: 20px;
    width: 60px
}

.avatar-text {
    color: #fff;
    font-size: 26px;
    font-weight: 700
}

.profile-info {
    -webkit-flex: 1;
    flex: 1
}

.profile-name {
    color: var(--primary-color);
    display: block;
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 5px
}

.profile-desc {
    color: var(--text-secondary);
    font-size: 14px
}

.profile-actions {
    display: -webkit-flex;
    display: flex;
    margin-left: 15px
}

.edit-btn {
    background: var(--primary-gradient);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(76,175,80,.25);
    color: #fff;
    font-size: 14px;
    padding: 6px 12px;
    transition: all .3s ease
}

.edit-btn:active {
    box-shadow: 0 1px 4px rgba(76,175,80,.15);
    -webkit-transform: scale(.95);
    transform: scale(.95)
}

.history-btn {
    background: var(--info-color);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(33,150,243,.25);
    color: #fff;
    font-size: 14px;
    padding: 6px 12px;
    transition: all .3s ease
}

.history-btn:active {
    box-shadow: 0 1px 4px rgba(33,150,243,.15);
    -webkit-transform: scale(.95);
    transform: scale(.95)
}

.add-profile-btn {
    background: var(--primary-gradient);
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(76,175,80,.3);
    color: #fff;
    font-size: 16px;
    font-weight: 500;
    height: 45px;
    margin: 20px;
    width: calc(100% - 40px)
}

.add-profile-btn:active {
    box-shadow: 0 2px 8px rgba(76,175,80,.2);
    -webkit-transform: scale(.98);
    transform: scale(.98)
}

.profile-item:active {
    background-color: rgba(0,0,0,.05);
    transition: background-color .2s
}
